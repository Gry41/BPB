<head>
    
   <script>
      $(document).ready(function() {
         $('select').material_select();
      });
   </script>
  </head>
  
  <body>
  <p id="notice"><%= notice %></p>
  <%= form_tag("/rents/query", :multipart=>true) do %>
  
  <div class="container">
    <div class="col s2">
  
    </div>
    <div class="col s8">
      <div class="card">
        <div class="container">
          <div class="row">
            <div class="col s3">
              <label>Location</label>
                <select name="rnt[location_id]">
                    <option value="">Any</option>
                    <%Location.all.each do |single|%>
                    <option value=<%=single.id%>><%=single.name%></option>
                  <% end%>
                  </select>
                  
            </div>
            <div class="col s3">
              <label>Bedrooms</label>
              <br>
                <select name="rnt[rooms]">
                    <option value="0">Any</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value ="4">4</option>
                    <option value="5">5</option>
                  </select>
            </div>
            <div class="col s3">
              <label>Bathrooms</label>
              <br>
                <select name="rnt[bathrooms]" >
                    <option value="0">Any</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value ="4">4</option>
                    <option value="5">5</option>
                  </select>                
            </div>
            <div class="col s3">
              <label>Price</label>   
              <br>         
              <select name="rnt[dbl_price]" >
                <option value="100000000">Any</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="80">80</option>
                <option value="100">100</option>
              </select>
  
            </div>
          </div>
          <div class="row">
            <div class="col s10"></div>
            <div class="col s2">
                <%= submit_tag "Send", :class=>"waves-effect waves-light btn"%>
                
            </div>
          </div>
         <br>
        </div>
      </div>
    </div>
  </div>
  
  
  <% end %>
  
  
    
    
  <h1>Rents</h1>
    <div class="row">
      <div class="col s12">
        <Strong>Nuevo alojamiento</Strong>
        <%= link_to '+', new_rent_path,class:"btn-floating btn-large waves-effect waves-light" ,style:"font-size:25px;", id:"btn-circular" %>
        
      </div>
        <% @rents.each do |rent| %>
        <div class="col s3">
        <div class="card" style="height:90px;">
          
            <div class="row">
              <div class="col s8">
                  <div class="row">Name:</div>
                  <div class="row"><%= rent.name%></div>
              </div>
              <div class="col s4">
                <div class="row">
                  <div class="col s6">
                      <%= link_to 'Show', rent, class:"waves-effect waves-light btn", id: "btn-small" %>      
                  </div>
                  <div class="col s6">
                      <%= link_to 'Edit', edit_rent_path(rent), class:"waves-effect waves-light btn", id: "btn-small" %>      
                  </div>
                </div>
                     </div>
            </div>
            
          
        </div>
      </div>
        <% end %>
    </div>
    
  
  
  <style>
    #btn-small {
      height: 15px;
      line-height: 15px;
      font-size: 10px;
      padding: 0 0.2rem;
      }
    #btn-circular{
      height: 40px;
      width: 40px;
      line-height: 40px;
      padding: 0 0.5rem;
    }
    .card{
      background-color: #e6c9c90e
    }  
  
  </style>
  
  </body>