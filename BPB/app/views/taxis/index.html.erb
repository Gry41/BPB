<p id="notice"><%= notice %></p>

<h1>Taxis</h1>

<table>
  <thead>
    <tr>
      <th>Driver name</th>
      <th>Places</th>
      <th>Car Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxis.each do |taxi| %>
      <tr>
        <td><%= taxi.driver_name %></td>
        <td><%= taxi.places %></td>
        <td><%= taxi.cartype.name%></td>
        <td><%= link_to 'Show', taxi %></td>
        <td><%= link_to 'Edit', edit_taxi_path(taxi) %></td>
        <td><%= link_to 'Destroy', taxi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

